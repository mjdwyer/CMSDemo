<!DOCTYPE html>
<html>
    <head>
        <link href="http://cdn.datatables.net/1.10.7/css/jquery.dataTables.css" rel="stylesheet" />

        <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
        <script src="http://cdn.datatables.net/1.10.7/js/jquery.dataTables.min.js"></script>
        
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        @*        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>*@
        <link href="~/Content/modalPopLite.css" rel="stylesheet" />
        <script src="~/Scripts/modalPopLite.min.js"></script>
        <script src="~/Scripts/jquery.easytabs.min.js"></script>

        <style>
            .panel {
                display: none;
                width: 185px;
                /*padding: 20px;*/
                background-color: #B3966F;
                color: #fff;
                /*box-shadow: inset 0 0 5px 5px #222;*/
            }
            a {outline : none;}
            a img {outline : none;}
            img {border : 0;}
            a:active, a:focus { 
                outline: none; 
            }

            .menuLink {
                color: #000000;
                padding-left: 20px;
                font-size:small;
                cursor: pointer;
            }
            .breadcrmb {
                color: #000000;
                padding-left: 40px;
                font-size: medium;
                cursor: pointer;
            }
            #caseHeaderId {
                float:left;
                padding-left: 40px;
                padding-top: 10px;
                font-size: medium;
                color: #000000;
            }

        .etabs { margin: 0; padding: 0; }
        .tab { display: inline-block; zoom:1; *display:inline; background: #eee; border: solid 1px #999; border-bottom: none; -moz-border-radius: 4px 4px 0 0; -webkit-border-radius: 4px 4px 0 0; }
        .tab a { font-size: 14px; line-height: 2em; display: block; padding: 0 10px; outline: none; }
        .tab a:hover { text-decoration: underline; }
        .tab.active { background: #fff; padding-top: 6px; position: relative; top: 1px; border-color: #666; }
        .tab a.active { font-weight: bold; }
        .tab-container .panel-container { background: #fff; border: solid #666 1px; padding: 10px; -moz-border-radius: 0 4px 4px 4px; -webkit-border-radius: 0 4px 4px 4px; }


        label{
            display: inline-block;
            float: left;
            clear: left;
            width: 150px;
            text-align: right;
            margin: 10px;
        }
        input, select, textarea {
          display: inline-block;
          float: left;
            margin: 10px;
        }

        button {
            font-family: Arial, Helvetica, sans-serif;
            font-weight: normal;
            color: #444;
            min-width: 90px;
            padding:5px;
            margin: 5px 10px;
            /*background-color: #fdfdfd;*/
            background-color: #e2e2e2;
            border: 1px solid #cdcdcd;
            cursor: pointer;
            border-radius: 3px;
        }​

        </style>
        <script type="text/javascript">
            var rightArrowClick;

            $(function () {
                $('#popup-wrapper-profile').modalPopLite({ openButton: '#button', closeButton: '#close-btn' });
                $('#popup-wrapper-caseInfo').modalPopLite({ openButton: '#caseHeaderId', closeButton: '#closecaseHeaderId' });
                $('#popup-wrapper-tasks').modalPopLite({ openButton: '#tasksIcon' });
                $('#popup-wrapper-tasks-add').modalPopLite({ openButton: '#addTaskButton', closeButton: '#close-btn-add' });
                $('#popup-wrapper-news').modalPopLite({ openButton: '#newsIcon' });
                $('#popup-wrapper-calendar').modalPopLite({ openButton: '#calendarIcon' });
                $('#popup-wrapper-email').modalPopLite({ openButton: '#emailIcon' });
                $('#popup-wrapper-setup').modalPopLite({ openButton: '#setupRef'});
                $('#tab-container').easytabs();
                $('#tab-container-case').easytabs();

                $('#example').DataTable({

                    "paging": false,
                    "order": [[1, "asc"]],
                    "info": false,
                    "filter": false

                });

                $('#newsList').DataTable({

                    "paging": false,
                    "info": false,
                    "filter": false,
                    "ordering": false

                });

                $('#holidayList').DataTable({

                    "paging": false,
                    "info": false,
                    "filter": false,
                    "ordering": false

                });

                $('#tasksIcon').click(function () {
                    $.panelslider.close();
                });

                $('#moreIcon').click(function () {
                    //$.ajax({
                    //    url: 'Home/LoadMoreIcons',
                    //    dataType: "html",
                    //    success: function (data) {
                    //    }
                    //});
                    //$('#headIcons').hide();
                    //$('#moreIcons').show();

                });


            });

        </script>
    </head>
    <body>
        <header>
            <div class="container-fluid">
                <div class="row" style="background-color: #BCCBCC;">
                    <div class="col-sm-10">
                        <a id="my-link" href="#my-panel" style="float:left"> <img src="~/Images/menu.png" />  </a>
                        <div id="caseHeaderId"></div>
                        <div id="headIcons">
                                @Html.Partial("mainIconsPartial")
                        </div>
                    </div>
                    <div class="col-sm-2">
                       <a href="."  id="button"> <div style="float:right;color: blue"><h5>Mike Dwyer</h5></div>
                        <div class="img-circular" style="float:right"></div></a>
                    </div>
                </div>
            </div>
        </header>
<div id="my-panel" class="panel">
<a href='@Url.Action("CaseMain","Case")'><img src="~/Images/Logo.jpg" /></a>   
</div>
<script src="~/Scripts/jquery.panelslider.min.js"></script>
<script >$('#my-link').panelslider({ side: 'left', duration: 200, clickClose: false, onOpen: null, easingOpen: null, easingClose: null });</script>
            <section>
                @RenderBody()
            </section>
<!--         </div> -->

        @*        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)*@
                @Html.Partial("setupWizardPartial")
                @Html.Partial("emailPartial")
                @Html.Partial("calendarPartial")
                @Html.Partial("newsPartial")
                @Html.Partial("profilePartial")
                @Html.Partial("caseInfoPartial")
                @Html.Partial("taskListPartial")
                @Html.Partial("taskListAddPartial")
    </body>
</html>
